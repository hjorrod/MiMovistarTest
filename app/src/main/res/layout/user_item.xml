<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="user"
            type="com.mimovistartest.model.UserVO" />

        <variable
            name="onClickListener"
            type="com.mimovistartest.util.OnUserClickListener" />

        <variable
            name="onFavStarListener"
            type="com.mimovistartest.util.OnFavStarClickListener" />

        <variable
            name="onRemoveListener"
            type="com.mimovistartest.util.OnRemoveClickListener" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_1"
        android:background="@drawable/background_item_rounded"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/layout_margin_1"
        android:onClick="@{() -> onClickListener.onUserClick(user)}">

        <androidx.cardview.widget.CardView
            android:id="@+id/user_image_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_1"
            app:cardCornerRadius="@dimen/image_corner_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:scaleType="fitXY"
                app:imageUrl="@{user.picture}"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/user_name"
            style="@style/TextCardView.UserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@{user.name}"
            app:layout_constraintStart_toEndOf="@+id/user_image_cv"
            app:layout_constraintTop_toTopOf="@+id/user_image_cv"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Name" />

        <TextView
            android:id="@+id/user_email"
            style="@style/TextCardView.ExtraInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.email}"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@+id/user_name"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            tools:text="Email" />

        <TextView
            android:id="@+id/user_phone"
            style="@style/TextCardView.ExtraInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.phone}"
            app:layout_constraintStart_toStartOf="@+id/user_name"
            app:layout_constraintTop_toBottomOf="@+id/user_email"
            tools:text="Phone" />

        <ImageView
            android:id="@+id/user_star_fav"
            android:layout_width="@dimen/fav_star_width"
            android:layout_height="@dimen/fav_star_width"
            android:layout_marginTop="@dimen/min_top_margin"
            android:layout_marginEnd="@dimen/layout_margin_2"
            android:clickable="true"
            android:onClick="@{() -> onFavStarListener.onFavStarClick(user)}"
            android:src="@{user.isFav ? @drawable/star_fav : @drawable/star_no_fav}"
            app:layout_constraintEnd_toStartOf="@+id/user_remove_icon"
            app:layout_constraintTop_toBottomOf="@+id/user_phone"
            android:focusable="true" />

        <ImageView
            android:id="@+id/user_remove_icon"
            android:layout_width="@dimen/fav_star_width"
            android:layout_height="@dimen/fav_star_width"
            android:layout_marginTop="@dimen/min_top_margin"
            android:layout_marginEnd="@dimen/layout_margin_1"
            android:clickable="true"
            android:onClick="@{() -> onRemoveListener.onRemoveClickListener(user)}"
            android:src="@drawable/ic_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_phone"
            android:focusable="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>